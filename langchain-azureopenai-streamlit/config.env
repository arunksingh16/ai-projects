# AI Agent Configuration Template

# Azure OpenAI Configuration
AZURE_OPENAI_API_KEY=xxxxx
AZURE_OPENAI_ENDPOINT=https://xxxx.openai.azure.com/

# Logging Configuration
LOG_LEVEL=INFO
ENABLE_CONVERSATION_LOG=true
ENABLE_DETAILED_LOGGING=true
LOG_FILE_PATH=ai_agent.log
CONVERSATION_LOG_PATH=conversation_log.json

# Performance Settings
STREAMING_DELAY=0.02
MAX_CONVERSATION_HISTORY=100

# UI Settings
SHOW_DEBUG_INFO=false
ENABLE_COST_ALERTS=true
COST_ALERT_THRESHOLD=1.0

# Optional: Model-specific overrides
# AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4o
# AZURE_OPENAI_API_VERSION=2025-01-01-preview
